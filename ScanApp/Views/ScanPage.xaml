<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ScanApp.Views.ScanPage"
  xmlns:vm="clr-namespace:ScanApp.ViewModels" Title="Scan">
  <ContentPage.Content>
    <StackLayout Padding="16">
      <!-- <Button x:DataType="vm:ScanViewModel" Text="SCAN" HorizontalOptions="Center" /> -->
      <StackLayout Margin="16">
        <Label Text="Result :" FontSize="Medium" HorizontalOptions="Center" />
        <Label x:DataType="vm:ScanViewModel" Text="{Binding Result}" FontSize="Large" TextColor="Black" HorizontalOptions="CenterAndExpand" />
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>